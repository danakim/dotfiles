[user]
    name = Dan
    email = dan@hostatic.ro
[color]
    ui = true
[core]
    editor = vim
[push]
    default = current
[alias]
    summary = log --all --oneline --no-merges
    word-diff = diff --word-diff
    ws-diff = diff -w
    recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
    overview = log --all --oneline --no-merges
    recap = log --all --oneline --no-merges --author=<dan@hostatic.ro>
    graph = log --graph --all --decorate --stat --date=iso

